# Database
DATABASE_URL="postgresql://user:password@localhost:5432/connected?schema=public"

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET="your-access-token-secret-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-token-secret-min-32-chars"

# API Server URL (for frontend)
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Web App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Server App URL (used by backend callbacks)
APP_URL="http://localhost:3000"

# CORS Origins (for server)
CORS_ORIGIN="http://localhost:3000"

# Dodo Payments
DODO_PAYMENTS_API_KEY="your-dodo-api-key"
DODO_WEBHOOK_SECRET="your-dodo-webhook-secret"

# Dodo Payments Product IDs (create these in your Dodo dashboard)
DODO_PRODUCT_LITE="prod_lite_monthly"
DODO_SIGNUP_LITE="prod_lite_signup"
DODO_PRODUCT_GROWTH="prod_growth_monthly"
DODO_SIGNUP_GROWTH="prod_growth_signup"
DODO_PRODUCT_ENTERPRISE="prod_enterprise_monthly"
DODO_SIGNUP_ENTERPRISE="prod_enterprise_signup"

# PayNow (for Zim payments)
