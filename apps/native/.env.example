# Connect-Ed Native App Environment Configuration
# Copy this file to .env and update the values for your environment

# Server API Base URL (change based on environment)
# For Android emulator: 10.0.2.2:3001
# For iOS simulator: localhost:3001
# For physical devices: your-machine-lan-ip:3001
EXPO_PUBLIC_API_URL=http://localhost:3001

# WebSocket URL for real-time messaging
EXPO_PUBLIC_WS_URL=ws://localhost:3001

# WhatsApp Agent URL (for WhatsApp integration features)
EXPO_PUBLIC_AGENT_URL=http://localhost:5000

# Optional: API timeout in milliseconds (default: 30000)
EXPO_PUBLIC_API_TIMEOUT=30000

# Optional: Enable debug logging (default: false)
EXPO_PUBLIC_DEBUG=false
